  <example>
    <statement>
      <p>
        Work out the circumference.
      </p>
      <image width="50%">
      <latex-image>
        \begin{tikzpicture}
          % Draw a colorful circle with gradient
          \shade[ball color=white] (0,0) circle(7cm);

          % Add an outline for the circle
          \draw[line width=2pt, color=black] (0,0) circle(7cm);

          % Add a radial gradient effect
          \shade[inner color=white, outer color=white] (0,0) circle(6.9cm);

          % Label the diameter
          \draw[dashed, thick] (-7,0) -- (7,0);
          \node at (0,-0.5) {\textbf{\fontsize{20}{14}\selectfont 14 cm}};

          % Add endpoints for the diameter
          \filldraw[blue] (-7,0) circle(3pt);
          \filldraw[blue] (7,0) circle(3pt);
        \end{tikzpicture}
      </latex-image>
        
        
      </image>
    </statement>
    <solution>
      <p>
        <md>
          <mrow> \text{Circumference }=\amp \pi D </mrow>
          <mrow> =\amp \frac{22}{7} \times 14\,cm</mrow>
          <mrow> =\amp \frac{308}{7}\,cm </mrow>
          <mrow> =\amp 44\, cm</mrow>
        </md>
      </p>
    </solution>
  </example>
